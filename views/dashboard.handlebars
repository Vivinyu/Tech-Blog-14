<div class="dashboard">
  <h2>Your Dashboard</h2>
  
  {{#if posts.length}}
  <ul class="post-list">
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
  {{else}}
  <p>You haven't created any posts yet.</p>
  {{/if}}

  <a href="/dashboard/new" class="btn">+ New Post</a>
</div>