<article class="post">
  <div class="title">
    <a href="/post/{{id}}">{{title}}</a>
  </div>
  <div class="meta">
    Posted by {{user.username}} on {{format_date createdAt}}
  </div>
  <div class="content">
    {{content}}
  </div>
  {{#if (gt comments.length 0)}}
  <div class="comments-info">
    {{format_plural "Comment" comments.length}}: {{comments.length}}
  </div>
  {{/if}}
</article>